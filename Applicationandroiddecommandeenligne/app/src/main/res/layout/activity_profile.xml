<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="@color/White"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/profile_id_img"
            android:layout_width="66dp"
            android:layout_height="57dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/profile_id_img" />

        <ImageView
            android:id="@+id/profile_name_img"
            android:layout_width="66dp"
            android:layout_height="57dp"
            android:layout_marginLeft="-66dp"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/profile_name_img" />

        <ImageView
            android:id="@+id/profile_cin_img"
            android:layout_width="66dp"
            android:layout_height="57dp"
            android:layout_marginLeft="-66dp"
            android:layout_marginTop="210dp"
            app:srcCompat="@drawable/profile_cin_img" />

        <ImageView
            android:id="@+id/profile_birthday_img"
            android:layout_width="66dp"
            android:layout_height="57dp"
            android:layout_marginLeft="-66dp"
            android:layout_marginTop="280dp"
            app:srcCompat="@drawable/profile_birthday_img" />

        <ImageView
            android:id="@+id/profile_email_img"
            android:layout_width="66dp"
            android:layout_height="57dp"
            android:layout_marginLeft="-66dp"
            android:layout_marginTop="350dp"
            app:srcCompat="@drawable/profile_email_img" />

        <TextView
        android:id="@+id/fix_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="75dp"
        android:text="IDENTIFIANT :" />

        <TextView
            android:id="@+id/var_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-265dp"
            android:layout_marginTop="95dp"
            android:text=".........." />

        <TextView
            android:id="@+id/fix_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-265dp"
            android:layout_marginTop="150dp"
            android:text="NOM &amp; PRENOM :" />

        <TextView
            android:id="@+id/var_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-265dp"
            android:layout_marginTop="170dp"
            android:text=".........." />

        <TextView
            android:id="@+id/fix_cin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-265dp"
            android:layout_marginTop="215dp"
            android:text="CARTE IDENTITE :" />

        <TextView
            android:id="@+id/var_cin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-265dp"
            android:layout_marginTop="235dp"
            android:text=".........." />

        <TextView
            android:id="@+id/fix_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-265dp"
            android:layout_marginTop="285dp"
            android:text="Date de Naissance :" />

        <TextView
            android:id="@+id/var_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-265dp"
            android:layout_marginTop="305dp"
            android:text=".........." />

        <TextView
            android:id="@+id/fix_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-265dp"
            android:layout_marginTop="355dp"
            android:text="Electornic Mail :" />

        <TextView
            android:id="@+id/var_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-265dp"
            android:layout_marginTop="375dp"
            android:text=".........." />

    </LinearLayout>

    <Button
        android:id="@+id/btn_actions_lists"
        android:background="@drawable/list_button_background"
        android:layout_width="207dp"
        android:layout_height="50dp"
        android:text="actions lists"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.360"
        android:foregroundGravity="center"
        android:drawableLeft="@drawable/lists_actions_img"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="141dp"
        android:layout_height="122dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218"
        app:srcCompat="@drawable/profile_user_pic" />

    <TextView
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="#........"
        android:textAllCaps="true"
        android:textColor="@color/White"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"

        app:layout_constraintVertical_bias="0.108" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:background="@drawable/list_button_background"

        android:foregroundGravity="center"
        android:text="logout"
        app:layout_constraintBottom_toTopOf="@+id/btn_actions_lists"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

</androidx.constraintlayout.widget.ConstraintLayout>