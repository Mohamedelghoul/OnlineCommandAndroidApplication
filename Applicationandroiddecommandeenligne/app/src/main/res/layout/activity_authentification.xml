<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Authentification">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="135dp"
        android:src="@drawable/auth_logo"
        app:layout_constraintBottom_toTopOf="@+id/sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/foreground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="38sp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold|italic"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username :"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/sign_in_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password :"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/sign_in_pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/sign_in_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#BF0000"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/sign_in_btn"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/login_button_background"
            android:text="LOGIN"
            android:textColor="#fff"
            android:textSize="22sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>